<h1>Food</h1>

<h2>Food to Eat:</h2>

<ul>
{{#each foods}}
	{{#unless eaten}}
		{{> foods/food-block eaten=true}}
	{{/unless}}
{{/each}}
</ul>

<h2>Eaten Already:</h2>

<ul>
{{#each foods}}
	{{#if eaten}}
		{{> foods/food-block eaten=false}}
	{{/if}}
{{/each}}
</ul>

<h2>Add a Food</h2>

<form class="create-form">

	<div class="form-group">
		<label for="re">Restaurant:</label>
		<input type="text" id="re" name="restaurant">
	</div>
	
	<div class="form-group">
		<label for="ca">Food Item:</label>
		<input type="text" id="ca" name="foodItem">
	</div>
	
	<div class="form-group">
		<label for="eaten">Eaten?</label><br>
		<input type="radio" name="eaten" value="1" checked> Eaten!<br>
		<input type="radio" name="eaten" value="0"> Not Yet
	</div>
	
	<button type="submit">Add Food</button>
	
</form>
